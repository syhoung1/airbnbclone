<div class="room-show-container">
  <div class="content-container text-center">
    <%= form_for @home_listing, url: wizard_path, method: :put do |f| %>
      <%= f.label :place do %>
        <h2>This is a</h2>
      <% end %>
      <%= f.select :place, ["Home", "Hotel", "Something else"] %>
      <hr class="section-divider">
      <%= f.label :property_type do %>
        <h2>What kind of property is this?</h2>
      <% end %>
      <%= f.select :property_type, ["Apartment", "House", "Condo", "Bed & Breakfast" "Boutique Hotel" "Other"] %>
      <hr class="section-divider">
      <%= f.label :accommodation_situation do %>
        <h2>Guests will be able to have</h2>
      <% end %>
      <%= f.select :accommodation_situation, ["Own Room", "Entire Place", "Shared Room"] %>
      <hr class="section-divider">
      <%= f.submit "Next", class: "submit-btn" %>
    <% end %>
  </div>
</div>

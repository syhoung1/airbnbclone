<div class="room-show-container">
  <div class="content-container text-center">
    <%= form_for @home_listing do |f| %>
      <h1>Edit your listing</h1>
      <hr class="row-divider">
      <div class="edit-field-container">
        <%= f.label :photos do %>
          <h2>Upload Photos here</h2>
        <% end %>
        <%= f.file_field :photos, multiple: true, class: 'file-input' %>
        <%= f.submit "Submit", class: 'submit-btn' %>
      </div>
      <hr class="row-divider">
      <div class="edit-field-container">
        <% if @home_listing.title != "" %>
          <h2><%= @home_listing.title %></h2>
          <a class="edit-field">Edit the title</a>
          <hr class="row-divider">
        <% else %>
          <a class="edit-field">Give your place a name!</a>
          <hr class="row-divider">
        <% end %>
        <div class="edit-fields">
          <%= f.label :title do %>
            <h3>Enter a name</h3>
          <% end %>
          <%= f.text_field :title, placeholder: "Name goes here", class: "text-input" %>
          <%= f.submit "Submit", class: "submit-btn" %>
          <hr class="row-divider">
        </div>
      </div>
      <div class="edit-field-container">
        <h2>$<%= @home_listing.price %></h2>
        <a class="edit-field">Edit the price</a>
        <div class="edit-fields">
          <%= f.label :price %>
          <%= f.number_field :price, class: "number-input" %>
          <%= f.submit "Submit", class: "edit-field-confirm" %>
        </div>
      </div>
    <% end %>
    <div>
      <%= link_to "Remove this listing", home_listing_path(@home_listing), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  </div>
</div>
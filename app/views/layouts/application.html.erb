<!DOCTYPE html>
<html>
<head>
  <title>Airbb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>
  <link rel='stylesheet' href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />

</head>
<body>
  <%= render "welcome/login_modal" %>
  <%= render "welcome/sign_up_modal" %>
  <div class="nav-bar">
    <div class="brand-container">
      <div class="logo-container">
        <a href="<%= home_listings_path %>">
          <i class="ion-android-plane brand-logo"></i>
        </a>
      </div>
    </div>
    <div class="user-links">
      <div class="links-container">
        <ul class="links-list">
          <% if current_user %>
            <% if current_user.lessor %>
              <li>
                <div class="list-button">
                  <div class="button-container">
                    <a href="<%= home_listing_booking_requests_path(current_user.lessor.home_listing) %>">
                      <span>Booking Requests</span>
                    </a>
                  </div>
                </div>
              </li>
            <% end %>
          <% else %>
              <li>
                <div class="list-button">
                  <div class="button-container">
                    <%= link_to "Become a Host", build_path(:place_type) %>
                  </div>
                </div>
              </li>
          <% end %>
          <li>
            <div class="list-button">
              <div class="button-container">
                <a href="welcome#help", data-toggle="modal">
                  <span>Help</span>
                </a>
              </div>
            </div>
          </li>
          <% if current_user %>
            <li>
              <div class="list-button">
                <div class="button-container">
                  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                </div>
              </div>
            </li>
          <% else %>
            <li>
              <div class="list-button">
                <div class="button-container">
                  <a href="#sign_up", data-toggle="modal">
                    <span>Sign Up</span>
                  </a>
                </div>
              </div>
            </li>
            <li>
              <div class="list-button">
                <div class="button-container">
                  <a href="#login", data-toggle="modal">
                    <span>Log In</span>
                  </a>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>


  <%= yield %>
</body>
</html>
